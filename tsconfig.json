{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./typings",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "target": "ES5"
  },
  "include": [
    "src/**/*.ts"
  ]
}
